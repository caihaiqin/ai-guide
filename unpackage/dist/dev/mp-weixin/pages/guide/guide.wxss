.userinfo-container {
  min-height: 100vh;
  background-color: #a6bcd5;
  padding: 0 20rpx;
}
.userinfo-container .header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 20rpx;
}
.userinfo-container .header .title {
  font-size: 32rpx;
  font-weight: 500;
}
.userinfo-container .header .back-icon,
.userinfo-container .header .more-icon {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.userinfo-container .form-container {
  padding: 30rpx;
}
.userinfo-container .form-container .form-item {
  margin-bottom: 40rpx;
}
.userinfo-container .form-container .form-item .label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}
.userinfo-container .form-container .form-item input,
.userinfo-container .form-container .form-item textarea {
  width: 100%;
  background: #ffffff;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
}
.userinfo-container .form-container .form-item textarea {
  height: 160rpx;
}
.userinfo-container .form-container .form-item .input-placeholder {
  color: #999;
  font-size: 28rpx;
}
.userinfo-container .form-container .birthday-item .birthday-picker {
  display: flex;
  justify-content: space-between;
}
.userinfo-container .form-container .birthday-item .birthday-picker .picker-item {
  flex: 1;
  text-align: center;
  background: #ffffff;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 20rpx;
  margin: 0 10rpx;
  font-size: 28rpx;
}
.userinfo-container .form-container .birthday-item .birthday-picker .picker-item:first-child {
  margin-left: 0;
}
.userinfo-container .form-container .birthday-item .birthday-picker .picker-item:last-child {
  margin-right: 0;
}
.userinfo-container .save-btn {
  width: 90%;
  height: 88rpx;
  background: #95d13c;
  border-radius: 44rpx;
  color: #ffffff;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 60rpx auto;
  border: none;
}
.userinfo-container .save-btn:active {
  opacity: 0.8;
}