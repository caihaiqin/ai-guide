.zodiac-background{position:fixed;top:0;left:0;width:100%;height:100vh;z-index:-1;overflow:hidden}.zodiac-background .bg-video-container{position:absolute;width:100%;height:100%;z-index:-1}.zodiac-background .bg-video-container .bg-video{width:100%;height:100%;object-fit:cover}.zodiac-background .zodiac-symbols{position:absolute;width:100%;height:100%}.zodiac-background .zodiac-symbols .symbol{position:absolute;width:30px;height:30px;animation:float 8s ease-in-out infinite}.zodiac-background .zodiac-symbols .symbol .symbol-inner{width:100%;height:100%;border:2px solid rgba(255,255,255,.3);border-radius:50%}.zodiac-background .particles{position:absolute;width:100%;height:100%}.zodiac-background .particles .particle{position:absolute;border-radius:50%;animation:rise 15s linear infinite}.zodiac-background .particles .particle.fire{background:radial-gradient(circle,rgba(255,165,0,.8),rgba(255,0,0,.4));box-shadow:0 0 10px rgba(255,165,0,.6)}.zodiac-background .particles .particle.earth{background:radial-gradient(circle,rgba(139,105,20,.8),rgba(85,107,47,.4));box-shadow:0 0 10px rgba(139,105,20,.6)}.zodiac-background .particles .particle.air{background:radial-gradient(circle,rgba(178,223,238,.8),rgba(135,206,250,.4));box-shadow:0 0 10px rgba(178,223,238,.6)}.zodiac-background .particles .particle.water{background:radial-gradient(circle,rgba(30,144,255,.8),rgba(0,0,139,.4));box-shadow:0 0 10px rgba(30,144,255,.6)}@keyframes float{0%{transform:translateY(0) rotate(0)}50%{transform:translateY(-20px) rotate(10deg)}to{transform:translateY(0) rotate(0)}}@keyframes rise{0%{transform:translateY(120%) translate(0);opacity:0}20%{opacity:1}80%{opacity:.5}to{transform:translateY(-20%) translate(20px);opacity:0}}
