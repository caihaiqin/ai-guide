.zodiac-animation{position:fixed;top:0;left:0;width:100%;height:100vh;z-index:999;display:flex;justify-content:center;align-items:center;flex-direction:column;transition:opacity .5s ease}.zodiac-animation .zodiac-video{width:100%;height:100%;object-fit:cover}.zodiac-animation .zodiac-animation-svg{width:100%;height:100%;display:flex;justify-content:center;align-items:center;flex-direction:column}.zodiac-animation .zodiac-name{position:absolute;bottom:50px;font-size:48rpx;color:#fff;font-weight:700;text-shadow:0 0 10px rgba(0,0,0,.5)}.zodiac-animation .debug-info{position:absolute;top:20px;left:20px;background:rgba(0,0,0,.7);color:#fff;padding:10px;border-radius:5px;font-size:24rpx;max-width:70%;z-index:1000}.zodiac-animation .debug-info text{display:block;margin-bottom:5px}
